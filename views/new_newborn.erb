<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="bi bi-plus-circle me-2"></i>Добавить новорожденного
    </h5>
  </div>
  
  <div class="card-body">
    <form action="/registry" method="post">
      <div class="row mb-3">
        <div class="col-md-4">
          <label for="last_name" class="form-label">Фамилия*</label>
          <input type="text" class="form-control" id="last_name" name="newborn[last_name]" required>
        </div>
        <div class="col-md-4">
          <label for="first_name" class="form-label">Имя*</label>
          <input type="text" class="form-control" id="first_name" name="newborn[first_name]" required>
        </div>
        <div class="col-md-4">
          <label for="patronymic" class="form-label">Отчество</label>
          <input type="text" class="form-control" id="patronymic" name="newborn[patronymic]">
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-md-3">
          <label class="form-label">Пол*</label>
          <div class="btn-group w-100">
            <input type="radio" class="btn-check" name="newborn[gender]" id="gender_m" value="M" autocomplete="off" required>
            <label class="btn btn-outline-primary" for="gender_m">Мужской</label>
            
            <input type="radio" class="btn-check" name="newborn[gender]" id="gender_f" value="F" autocomplete="off">
            <label class="btn btn-outline-primary" for="gender_f">Женский</label>
          </div>
        </div>
        
        <div class="col-md-3">
          <label for="birth_date" class="form-label">Дата рождения*</label>
          <input type="date" class="form-control" id="birth_date" name="newborn[birth_date]" required>
        </div>
        
        <div class="col-md-3">
          <label for="birth_weight" class="form-label">Масса при рождении (г)*</label>
          <input type="number" step="10" class="form-control" id="birth_weight" name="newborn[birth_weight]" required>
        </div>
        
        <div class="col-md-3">
          <label for="birth_height" class="form-label">Рост при рождении (см)*</label>
          <input type="number" step="0.1" class="form-control" id="birth_height" name="newborn[birth_height]" required>
        </div>
      </div>
      
      <div class="d-flex justify-content-between">
        <a href="/registry" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i> Назад
        </a>
        <button type="submit" class="btn btn-main">
          <i class="bi bi-save me-1"></i> Сохранить
        </button>
      </div>
    </form>

    <% if @newborn && @newborn.errors.any? %>
  <div class="alert alert-danger">
    <h5>Ошибки при сохранении:</h5>
    <ul>
      <% @newborn.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  </div>
</div>