<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Результаты - Intergrowth-21</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .chart-container {
      height: 400px;
      margin-bottom: 2rem;
    }
    .percentile-card {
      border-left: 4px solid #0d6efd;
    }
    .percentile-value {
      font-size: 1.5rem;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="card shadow mb-4">
      <div class="card-header bg-primary text-white">
        <h1 class="h4 mb-0">Результаты оценки роста плода</h1>
      </div>
      
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Рост плода</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.height_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.height %> мм
                </p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Вес плода</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.weight_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.weight.round(1) %> г
                </p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Окружность головы</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.hc_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.head_circumference %> мм
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <h3 class="h5 mb-3">Графики роста</h3>
        
        <div class="chart-container">
          <h4>Рост плода (мм)</h4>
          <canvas id="heightChart"></canvas>
        </div>
<div class="chart-container">
  <h4>Вес плода (кг)</h4>
  <canvas id="weightChart"></canvas>
</div>
        
        <div class="chart-container">
          <h4>Окружность головы (мм)</h4>
          <canvas id="hcChart"></canvas>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
          <a href="/" class="btn btn-primary px-4">
            Новый расчет
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // График роста
    new Chart(
      document.getElementById('heightChart'),
      {
        type: 'line',
        data: <%= @height_chart.to_json %>,
        options: chartOptions('Рост плода (мм)')
      }
    );
    
  new Chart(
    document.getElementById('weightChart'),
    {
      type: 'line',
      data: <%= @weight_chart.to_json %>,
      options: {
        responsive: true,
        plugins: {
          tooltip: {
            callbacks: {
              label: function(context) {
                return context.dataset.label + ': ' + context.parsed.y.toFixed(2) + ' кг';
              }
            }
          }
        },
        scales: {
          y: {
            title: { display: true, text: 'Вес (кг)' }
          }
        }
      }
    }
  );
    
    // График окружности головы
    new Chart(
      document.getElementById('hcChart'),
      {
        type: 'line',
        data: <%= @hc_chart.to_json %>,
        options: chartOptions('Окружность головы (мм)')
      }
    );
    
    function chartOptions(title) {
      return {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: title
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                return `${context.dataset.label}: ${context.parsed.y.toFixed(1)}`;
              }
            }
          }
        },
        scales: {
          x: {
            title: { display: true, text: 'Гестационный возраст' }
          },
          y: {
            title: { display: true, text: 'Значение' }
          }
        }
      };
    }
  </script>
</body>
</html>