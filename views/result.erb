<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Результаты - Intergrowth-21</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
<style>
  .chart-container {
    width: 100%;
    height: 1000px; /* Увеличили в 2 раза (было 500px) */
    margin-bottom: 60px; /* Больше отступ снизу */
    position: relative;
  }
  
  .chart-container h4 {
    margin-bottom: 25px;
    color: #2c3e50;
    font-weight: 600;
    font-size: 1.5rem;
    text-align: center;
  }
  
  .chart-wrapper {
    width: 100%;
    height: calc(100% - 50px);
    background: #f9f9f9;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 1px solid #eee;
  }
</style>
</head>
<body>
  <div class="container py-4">
    <div class="card shadow mb-4">
      <div class="card-header bg-primary text-white">
        <h1 class="h4 mb-0">Результаты оценки роста плода</h1>
      </div>
      
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Рост плода</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.height_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.height %> мм
                </p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Вес плода</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.weight_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.weight.round(1) %> г
                </p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 percentile-card">
              <div class="card-body">
                <h5 class="card-title">Окружность головы</h5>
                <div class="percentile-value text-primary">
                  <%= @measurement.hc_percentile %>%
                </div>
                <p class="card-text">
                  <%= @measurement.head_circumference %> мм
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <h3 class="h5 mb-3">Графики роста</h3>
        
<div class="chart-container">
  <h4>Вес плода (кг)</h4>
  <div class="chart-wrapper">
    <canvas id="weightChart"></canvas>
  </div>
</div>

<div class="chart-container">
  <h4>Рост плода (см)</h4>
  <div class="chart-wrapper">
    <canvas id="heightChart"></canvas>
  </div>
</div>

<div class="chart-container">
  <h4>Окружность головы (см)</h4>
  <div class="chart-wrapper">
    <canvas id="hcChart"></canvas>
  </div>
</div>

<script>
  // Общие настройки для всех графиков
  function chartOptions(title, unit) {
    return {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        title: {
          display: true,
          text: title,
          font: { size: 16 }
        },
        legend: {
          position: 'top',
          labels: { font: { size: 12 }, padding: 20 }
        },
        tooltip: {
          callbacks: {
            label: function(context) {
              return `${context.dataset.label}: ${context.parsed.y.toFixed(2)} ${unit}`;
            }
          }
        }
      },
      scales: {
        x: {
          title: { display: true, text: 'Гестационный возраст (недели)', font: { weight: 'bold' } },
          grid: { display: false }
        },
        y: {
          title: { display: true, text: title, font: { weight: 'bold' } },
          grid: { color: '#e0e0e0' }
        }
      },
      elements: {
        point: { hoverRadius: 8 }
      }
    };
  }

  // Инициализация графиков
  new Chart(document.getElementById('weightChart'), {
    type: 'line',
    data: <%= @weight_chart.to_json %>,
    options: chartOptions('Вес плода', 'кг')
  });

  new Chart(document.getElementById('heightChart'), {
    type: 'line',
    data: <%= @height_chart.to_json %>,
    options: chartOptions('Рост плода', 'см')
  });

  new Chart(document.getElementById('hcChart'), {
    type: 'line',
    data: <%= @hc_chart.to_json %>,
    options: chartOptions('Окружность головы', 'см')
  });
</script>